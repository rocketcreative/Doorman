<Alloy>
  <Window id="win">
  	<View id="container" class="vertical">
	  	<View id="small_logo" />
	  	<View class="top_icons">
		  	<View class="icon_text">
		  		<ImageView image="/images/small_user_icon.png" width="11" height="11"/>
		  		<Label id="user_id"></Label>
		  	</View>
		  	<View class="icon_text">
		  		<ImageView image="/images/small_logout_logo.png" width="12" height="12"/>
		  		<Label id="logout">Log Out</Label>
		  	</View>
		  </View>
	    <View id="main_body" class="vertical">
	      <Label id="swipe">Swipe Identification card now or enter manually</Label>
	      <TextField id="id_number" />
	      <View id="buttons">
	      	<Button id="scan"></Button>
	      	<Button id="submit"></Button>
	      </View>
	    </View>
    </View>
  </Window>
</Alloy>
